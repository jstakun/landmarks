<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" metadata-complete="false" version="3.0">
  <display-name>GMS World landmarks provider</display-name>
  <filter>
    <filter-name>AuthzFilter</filter-name>
    <filter-class>net.gmsworld.server.filter.AuthzFilter</filter-class>
 </filter>
 <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    <init-param>
      <param-name>actionPackages</param-name>
      <param-value>net.gmsworld.server.struts</param-value>
    </init-param>
  </filter>
 <filter>
    <filter-name>TokenFilter</filter-name>
    <filter-class>net.gmsworld.server.filter.TokenFilter</filter-class>
 </filter>
  <filter-mapping>
    <filter-name>AuthzFilter</filter-name>
    <url-pattern>/s/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>TokenFilter</filter-name>
    <url-pattern>/s/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/actions/*</url-pattern>
    <url-pattern>/s/*</url-pattern>
  </filter-mapping>
  
  <resource-env-ref>
  <description>
    CacheBean factory
  </description>
  <resource-env-ref-name>
    bean/CacheBean
  </resource-env-ref-name>
  <resource-env-ref-type>
    net.gmsworld.server.utils.memcache.CacheBean
  </resource-env-ref-type>
</resource-env-ref>

<resource-env-ref>
  <description>
    LandmarkPersistenceUtils factory
  </description>
  <resource-env-ref-name>
    bean/LandmarkPersistenceUtils
  </resource-env-ref-name>
  <resource-env-ref-type>
    net.gmsworld.server.utils.persistence.LandmarkPersistenceUtils
  </resource-env-ref-type>
</resource-env-ref>
   
   <resource-env-ref>
  <description>
    DevicePersistenceUtils factory
  </description>
  <resource-env-ref-name>
    bean/DevicePersistenceUtils
  </resource-env-ref-name>
  <resource-env-ref-type>
    net.gmsworld.server.utils.persistence.DevicePersistenceUtils
  </resource-env-ref-type>
</resource-env-ref>
   <resource-ref>
      <description>Landmarks DB Connection</description>
      <res-ref-name>jdbc/LandmarksDB</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
  
  <security-constraint>
    <display-name>Protected Area</display-name>
    <web-resource-collection>
      <web-resource-name>Struts Actions</web-resource-name>
      <url-pattern>/actions/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>ApplicationRealm</realm-name>
  </login-config>
  <security-role>
    <role-name>admin</role-name>
  </security-role>
</web-app>